.login-page
  width 100vw
  height 100vh
  color #e50
  overflow hidden
  background linear-gradient(70deg, #e80 0%, #e50 50%, #f0f0f0 50%, #f0f0f0 100%)
  display flex
  justify-content space-around
  align-items center
.page-con
  width 480px
  min-height 320px
  border-radius 4px
  padding 20px
  height auto
  position relative
  background #fff
  .panel-con
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    text-align center
  .sign-in 
    visibility hidden
  input
    width 90%
    height 36px
    line-height 36px
    margin-top 24px
    text-align left
    font-size 16px
    padding-left 12px
  .login-btn
    width 100px
    height 36px
    line-height 36px
    text-align center
    margin-top 30px
    font-size 18px
    background #e80
    color #fff
  .login-txt
    font-size 16px
    color #777
    text-decoration underline
    display inline-block
    margin-left 20px
    cursor pointer
  

